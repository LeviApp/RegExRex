{{yield}}
<div class="regp">
    {{#if this.unfinished}}
    <section class="search">
        <div>
        <h2>/</h2>
        <input type="text" class="rInput" value="">
        <h2>/</h2>
        <input class="flags" type="text">
        </div>

        {{#if this.correct}}
        <button disabled=true type="button">RegEx Submit</button>
        {{else}}
        <button {{ on "click" this.regexFind}} type="button">RegEx Submit</button>
        {{/if}}
        {{#if this.correct}}
        <button class="continue" {{ on "click" this.nextLesson}} type="button">Continue</button>
        {{/if}}
    </section>
    {{/if}}
    <section class="lesson">
        <div>
        <h2>Lesson {{this.lessonnumber}}: {{this.lessontitle}}</h2>
        <button {{ on "click" this.helpToggle}} class="{{if this.helpOpen "helpO"}}"><img src="/assets/img/help.png" alt="logo"></button>
        </div>
        <p>{{{this.lessonexplain}}}</p>
        <pre>{{{this.lessonpara}}}</pre>
            {{!-- {{#each @posts as |post|}}
                <h1>{{post.title}}</h1>
            {{/each}} --}}
        
        {{#if this.helpOpen}}
            <div class="help">
                <h3>Position</h3>
                <section>
                    <div>
                    <h4>^</h4>
                    <p>Start of text block</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>^</h4>
                        <p>Start/</p>
                    </div>
                </section>
                <section>
                    <div>
                    <h4>$</h4>
                    <p>End of text block</p>
                    </div>
                    <div>
                        <p>/end!</p>
                        <h4>$</h4>
                        <p>/</p>
                    </div>
                </section>
                <section>
                    <div>
                    <h4>^ ... $</h4>
                    <p>Entire text block</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>^</h4>
                        <p>\w\d</p>
                        <h4>$</h4>
                        <p>/</p>
                    </div>
                </section>
                <h3>Escaping Special Characters</h3>
                <section>
                    <div>
                    <h4>\</h4>
                    <p>. * + ? ( ) { } [ ] ^ \ $ |</p>
                    </div>
                    <div>
                        <p>/</p>
                         <h4>\</h4>
                        <p>(</p>
                        <h4>\</h4>
                        <p>.</p>
                        <h4>\</h4>
                        <p>*</p>
                         <h4>\</h4>
                        <p>)</p>
                        <p>/</p>
                    </div>
                </section>
                <h3>Flags</h3>
                    <section>
                    <div>
                    <h4>g</h4>
                    <p>Global flag</p>
                    </div>
                    <div>
                        <p>/\b\d{4}\b/</p>
                        <h4>g</h4>
                    </div>
                </section>

                    <section>
                    <div>
                    <h4>i</h4>
                    <p>Case-insensitive flag</p>
                    </div>
                    <div>
                        <p>/Ember/</p>
                        <h4>i</h4>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>gi</h4>
                    <p>Combined flags</p>
                    </div>
                    <div>
                        <p>/[a-e]+/</p>
                        <h4>gi</h4>
                    </div>
                </section>
                <h3>Quantifiers</h3>
                <section>
                    <div>
                    <h4>*</h4>
                    <p>0 or more</p>
                    </div>
                    <div>
                        <p>/Zz</p>
                        <h4>*</h4>
                        <p>/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>+</h4>
                    <p>1 or more</p>
                    </div>
                    <div>
                        <p>/\b/\D</p>
                        <h4>+</h4>
                        <p>\b/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>?</h4>
                    <p>0 or 1</p>
                    </div>
                    <div>
                        <p>/\w+[-.~]</p>
                        <h4>?</h4>
                        <p>\w+/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>{n}</h4>
                    <p>n times</p>
                    </div>
                    <div>
                        <p>/^(\s\w+\s)</p>
                        <h4>{3}</h4>
                        <p>$/</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>{n,m}</h4>
                    <p>n to m times</p>
                    </div>
                    <div>
                        <p>/\b\d</p>
                        <h4>{7,9}</h4>
                        <p>\b/</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>{n,}</h4>
                    <p>n or more times</p>
                    </div>
                    <div>
                        <p>/\.</p>
                        <h4>{5,}</h4>
                        <p>/g</p>
                    </div>
                </section>
                <h3>Metacharacters</h3>
                <section>
                    <div>
                    <h4>\s</h4>
                    <p>Space</p>
                    </div>
                    <div>
                        <p>/\w</p>
                        <h4>\s</h4>
                        <p>\w/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>\S</h4>
                    <p>Any character but space</p>
                    </div>
                    <div>
                        <p>/\b</p>
                        <h4>\S</h4>
                        <p>{3}\b/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>.</h4>
                    <p>Any character</p>
                    </div>
                    <div>
                        <p>/^</p>
                        <h4>.</h4>
                        <p>\s</p>
                        <h4>..</h4>
                        <p>\s</p>
                        <h4>...</h4>
                        <p>/</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>.*?</h4>
                    <p>Make character ungreedy</p>
                    </div>
                    <div>
                        <p>/a</p>
                        <h4>.*?</h4>
                        <p>u/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>\b</h4>
                    <p>Break</p>
                    </div>

                    <div>
                        <p>/</p>
                        <h4>\b</h4>
                        <p>\w{6,}</p>
                        <h4>\b</h4>
                        <p>/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>\B</h4>
                    <p>Non-break character</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>\B</h4>
                        <p>[ou]{2}</p>
                        <h4>\B</h4>
                        <p>/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>\d</h4>
                    <p>Digit</p>
                    </div>
                    <div>
                        <p>/\(</p>
                        <h4>\d</h4>
                        <p>{3}\)/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>\D</h4>
                    <p>Any character but digit</p>
                    </div>
                    <div>
                        <p>/\.</p>
                        <h4>\D</h4>
                        <p>+\b/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>\w</h4>
                    <p>letter/digit/underscore</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>\w</h4>
                        <p>+$/</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>\W</h4>
                    <p>Any character but letter/digit/underscore</p>
                    </div>
                    <div>
                        <p>/^</p>
                        <h4>\W</h4>
                        <p>*$/</p>
                    </div>
                </section>

                <h3>Character Classes</h3>

                <section>
                    <div>
                    <h4>[...]</h4>
                    <p>Individual characters</p>
                    </div>
                    <div>
                        <p>/\d</p>
                        <h4>[2357]</h4>
                        <p>/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>[n-m]</h4>
                    <p>Range of characters n-m</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>[3-6e-v]</h4>
                        <p>+/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>[n-m]</h4>
                    <p>Range of ASCII values</p>
                    </div>
                    <div>
                        <p>/^</p>
                        <h4>[(-:]</h4>
                        <p>{4,}$/</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>[^...]</h4>
                    <p>Characters not in character class</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>[^o-u]</h4>
                        <p>{5}/</p>
                    </div>
                </section>

                <h3>Captured Groups</h3>

                <section>
                    <div>
                    <h4>(...|...)</h4>
                    <p>Alternation</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>(</h4>
                        <p>\d+</p>
                        <h4>|</h4>
                        <p>\s+</p>
                        <h4>)</h4>
                        <p>/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>(...)</h4>
                    <p>Group</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>(,\w)</h4>
                        <p>{3}$/</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>(...)\1</h4>
                    <p>Back reference</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>(</h4>
                        <p>[.?!]</p>
                        <h4>)\1</h4>
                        <p>/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>(?&#60;=...)(...)</h4>
                    <p>Positive look behind</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>(?&#60;=</h4>
                        <p>\b0\.</p>
                        <h4>)(</h4>
                        <p>\d+</p>
                        <h4>)</h4>
                        <p>/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>(?&#60;!...)(...)</h4>
                    <p>Negative look behind</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>(?&#60;!</h4>
                        <p>[cst]</p>
                        <h4>)</h4>
                        <p>h/gi</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>(...)(?=...)</h4>
                    <p>Positive look ahead</p>
                    </div>
                    <div>
                        <p>/</p>
                        <p>\d+</p>
                        <h4>(?=</h4>
                        <p>,\d{3}</p>
                        <h4>)</h4>
                        <p>/g</p>

                    </div>
                </section>

                <section>
                    <div>
                    <h4>(...)(?!...)</h4>
                    <p>Negative look ahead</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>(</h4>
                        <p>\w+</p>
                        <h4>)(?!</h4>
                        <p>\s</p>
                        <h4>)</h4>
                        <p>/g</p>
                    </div>
                </section>

                <section>
                    <div>
                    <h4>(?&#60;=...)(...)(?=...)</h4>
                    <p>Combined looks</p>
                    </div>
                    <div>
                        <p>/</p>
                        <h4>(?&#60;=</h4>
                        <p>[02468]+</p>
                        <h4>)</h4>
                          <p>\d+</p>
                        <h4>(?=</h4>
                        <p>[02468]+</p>
                        <h4>)</h4>
                        <p>/g</p>

                    </div>
                </section>
            </div>    
        {{/if}}
    </section>
</div>

